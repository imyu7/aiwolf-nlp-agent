web_socket:
  url: ws://127.0.0.1:8080/ws
  token:
  auto_reconnect: false

agent:
  num: 5
  team: kanolab
  kill_on_timeout: true

path:
  random_talk: ./resource/2019071_44011_AIWolfTalkLogs.txt

# LLM Configuration
llm:
  enabled: true                    # LLMを有効にするかどうか
  provider: gemini                 # LLMプロバイダー (gemini, openai, anthropic等)
  model: gemini-2.5-flash-lite     # 使用するモデル名
  timeout: 10                      # APIタイムアウト (秒)
  max_retries: 2                   # リトライ回数

log:
  console_output: true
  file_output: true
  output_dir: ./log
  level: debug

  request:
    name: false
    initialize: false
    daily_initialize: false
    whisper: true
    talk: true
    daily_finish: false
    divine: true
    guard: true
    vote: true
    attack: true
    finish: false
